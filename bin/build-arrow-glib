#!/bin/bash

function is_darwin() {
  case $(uname -s) in
    Darwin)
      return 0
      ;;
  esac
  return 1
}

function run_meson() {
  if is_darwin; then
    PKG_CONFIG_PATH=$(brew --prefix libffi)/lib/pkgconfig:$PKG_CONFIG_PATH
  fi
  export PKG_CONFIG_PATH=$PREFIX/lib/pkgconfig:$PKG_CONFIG_PATH
  meson --buildtype=$BUILD_TYPE --prefix=$PREFIX "$@"
}

function run_build() {
  ninja -C ${ARROW_GLIB_BUILD_DIR} -j ${BUILD_JOBS:-6}
}

function run_install() {
  ninja -C ${ARROW_GLIB_BUILD_DIR} install
}

ARGS=()
RUN_MESON=0
RECONFIGURE=0
RUN_INSTALL=0
PREFIX=/opt/arrow-dev
BUILD_JOBS=6
BUILD_TYPE=debug
ARROW_GLIB_ROOT=$(pwd)
ARROW_GLIB_BUILD_DIR=${ARROW_GLIB_ROOT}/build
ARROW_CPP_ROOT=$(cd ${ARROW_GLIB_ROOT}/../cpp; pwd)
ARROW_CPP_BUILD_DIR=${ARROW_CPP_ROOT}/build

while [[ $# -gt 0 ]]; do
  case "$1" in
    --meson)
      RUN_MESON=1
      ;;
    --reconfigure)
      RECONFIGURE=1
      ;;
    --install)
      RUN_INSTALL=1
      ;;
    --prefix)
      shift
      PREFIX="$1"
      ;;
    --release)
      BUILD_TYPE=release
      ;;
    *)
      ARGS+=("$1")
      ;;
  esac
  shift
done

if [ -n "${ARGS[0]}" ]; then
  ARROW_GLIB_BUILD_DIR="${ARGS[0]}"
  if [ ! -d $ARROW_GLIB_BUILD_DIR ]; then
    mkdir -p $ARROW_GLIB_BUILD_DIR
  fi
  case $ARROW_GLIB_BUILD_DIR in
    /*)
      ;;
    *)
      ARROW_GLIB_BUILD_DIR=$(cd $(pwd)/$ARROW_GLIB_BUILD_DIR; pwd)
      ;;
  esac
fi

set -ex

if [ "$RUN_MESON" == 1 ]; then
  if [ "$RECONFIGURE" == 1 ]; then
    run_meson --reconfigure "$ARROW_GLIB_BUILD_DIR" "$ARROW_GLIB_ROOT"
  else
    run_meson "$ARROW_GLIB_BUILD_DIR" "$ARROW_GLIB_ROOT"
  fi
fi

run_build

if [ "$RUN_INSTALL" == 1 ]; then
  run_install
fi
