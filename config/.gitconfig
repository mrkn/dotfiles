[user]
	name = Kenta Murata
	email = mrkn@mrkn.jp
        # signingkey = 6081B062

[core]
	editor = nvim
        precomposeunicode = true
        quotepath = false
	excludesfile = ~/.gitignore_global

[alias]
	a = add
	ci = commit
	co = checkout
	cb = checkout -b
	d = diff
	dc = diff --cached --name-only
	dcn = diff --cached --name-only
	f = fetch
	lg = log --graph --date=iso --pretty=format:'%h %Cgreen%ad %Cblue%an %Creset%s %C(blue)%d%Creset'
	lga = log --graph --all --date=iso --pretty=format:'%h %Cgreen%ad %Cblue%an %Creset%s %C(blue)%d%Creset'
	rb = rebase
	rbc = rebase --continue
	rbi = rebase -i
	sb = status -sb
	st = stash
	sh = !bash -l

[color]
	ui = true

[commit]
	gpgSign = true

[merge]
	ff = false

[push]
	default = simple

[ghq]
	root = ~/src

[github]
	user = mrkn

[gpg]
	format = ssh

[gpg "ssh"]
	defaultKeyCommand = ssh-add -L
	allowedSignersFile = ~/.ssh/allowed_signers
